// For format details, see https://aka.ms/devcontainer.json
{
	"name": "Hyperdrive",
	"build": {
        "dockerfile": "Dockerfile"
    },

	"features": {
		"ghcr.io/devcontainers/features/docker-in-docker": {}
	},

	// Use a different mount and starting point inside the container
	"workspaceMount": "source=${localWorkspaceFolder},target=/home/vscode/bin/hyperdrive,type=bind,consistency=cached",
	"workspaceFolder": "/home/vscode/bin/hyperdrive",

	"postStartCommand": "chmod +x .devcontainer/setup.sh && sh -c .devcontainer/setup.sh >> /home/vscode/setup.log"

	//"overrideCommand": false
}