# Hyperdrive testing image

FROM golang:1.19.5-buster

RUN apt update && apt install -y \
	wget

# add RP
RUN wget https://github.com/rocket-pool/smartnode-install/releases/latest/download/rocketpool-cli-linux-amd64 -O ~/bin/rocketpool
RUN chmod +x ~/bin/rocketpool

# add Hyperdrive
COPY ../hyperdrive ~/bin/hyperdrive 
# ERROR HERE, hyperdrive not found?
RUN chmod +x ~/bin/hyperdrive