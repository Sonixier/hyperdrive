version: "3.7"
services:
  ec:
    image: {{.GetEcContainerTag}}
    user: root
    container_name: {{.ProjectName}}_ec
    restart: unless-stopped
    stop_grace_period: 15m
    {{- $p2p := (or .LocalExecutionConfig.P2pPort.Value "30303")}}
    ports: [ "{{$p2p}}:{{$p2p}}/udp", "{{$p2p}}:{{$p2p}}/tcp"{{.GetEcOpenApiPorts}} ]
    volumes:
      - ecdata:/ethclient
      - /usr/local/lib/hyperdrive/scripts:/setup:ro
      - /var/lib/hyperdrive/data/{{.ProjectName}}:/secrets
    networks:
      - net
    environment:
      - NETWORK={{.Network}}
      - CLIENT={{.LocalExecutionConfig.ExecutionClient}}
      - EC_MAX_PEERS={{.GetEcMaxPeers}}
      - EC_P2P_PORT={{$p2p}}
      - EC_ADDITIONAL_FLAGS={{.GetEcAdditionalFlags}}
      - EC_HTTP_PORT={{.LocalExecutionConfig.HttpPort}}
      - EC_WS_PORT={{.LocalExecutionConfig.WebsocketPort}}
      - EC_ENGINE_PORT={{.LocalExecutionConfig.EnginePort}}
      - EXTERNAL_IP={{.GetExternalIP}}
      - ENABLE_METRICS={{.Metrics.EnableMetrics}}
      - EC_METRICS_PORT={{.Metrics.EcMetricsPort}}
      {{- /* Client-specific values */}}
      {{- if eq .LocalExecutionConfig.ExecutionClient.String "besu"}}
      - BESU_MAX_BACK_LAYERS={{.LocalExecutionConfig.Besu.MaxBackLayers}}
      - BESU_JVM_HEAP_SIZE={{.LocalExecutionConfig.Besu.JvmHeapSize}}
      {{- else if eq .LocalExecutionConfig.ExecutionClient.String "nethermind"}}
      - EC_CACHE_SIZE={{.LocalExecutionConfig.Nethermind.CacheSize}}
      - RP_NETHERMIND_PRUNE_MEM_SIZE={{.LocalExecutionConfig.Nethermind.PruneMemSize}}
      - RP_NETHERMIND_ADDITIONAL_MODULES={{.LocalExecutionConfig.Nethermind.AdditionalModules}}
      - RP_NETHERMIND_ADDITIONAL_URLS={{.LocalExecutionConfig.Nethermind.AdditionalUrls}}
      {{- else if eq .LocalExecutionConfig.ExecutionClient.String "geth"}}
      - RP_GETH_ENABLE_PBSS={{.LocalExecutionConfig.Geth.EnablePbss}}
      {{- end}}
    entrypoint: sh
    command: "/setup/start-ec.sh"
    cap_drop:
      - all
    cap_add:
      - dac_override
    security_opt:
      - no-new-privileges
networks:
  net:
volumes:
  ecdata:
